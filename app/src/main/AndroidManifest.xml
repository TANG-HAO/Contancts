<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.contactlisttest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EditActivity1"
            android:label="@string/title_activity_edit1"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.example.intent.action.edit_activity" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.example.intent.action.edit_category" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ContactingActivity">
            <intent-filter>
                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>
        <activity android:name=".LinkedPersonActivity">
            <intent-filter>
                <category android:name="android.intent.category.TAB" />
            </intent-filter>
        </activity>

    </application>

</manifest>